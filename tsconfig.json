{
    "compilerOptions": {
      "alwaysStrict": true,
      "baseUrl": "./",
      "declaration": false,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "lib": [
        "es2015",
        "es6",
        "dom",
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "build",
      "removeComments": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "target": "es5",
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "exclude": [
      "./node_modules/",
      "./template/",
      "./features/"
    ],
    "include": [
      "./**/*.ts"
    ]
  }